{
    "name": "ilib-tools-common",
    "version": "1.9.1",
    "module": "./src/index.js",
    "exports": {
        ".": {
            "import": "./src/index.js"
        }
    },
    "type": "module",
    "description": "Library of common classes and functions for the ilib command-line tools",
    "keywords": [
        "internationalization",
        "i18n",
        "localization",
        "l10n",
        "globalization",
        "g11n",
        "lint",
        "locale"
    ],
    "homepage": "https://github.com/iLib-js/ilib-tools-common",
    "bugs": "https://github.com/iLib-js/ilib-tools-common/issues",
    "email": "marketing@translationcircle.com",
    "license": "Apache-2.0",
    "author": {
        "name": "Edwin Hoogerbeets",
        "web": "http://www.translationcircle.com/",
        "email": "edwin@translationcircle.com"
    },
    "contributors": [
        {
            "name": "Edwin Hoogerbeets",
            "email": "ehoogerbeets@gmail.com"
        },
        {
            "name": "Goun Lee",
            "email": "goun.lee@lge.com"
        }
    ],
    "files": [
        "src",
        "docs",
        "README.md",
        "LICENSE"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/iLib-js/ilib-tools-common.git"
    },
    "engines": {
        "node": ">=10.0.0"
    },
    "scripts": {
        "dist": "npm-run-all doc ; npm pack",
        "test": "LANG=en_US.UTF8 node --experimental-vm-modules ./node_modules/.bin/jest",
        "test:watch": "LANG=en_US.UTF8 node --experimental-vm-modules ./node_modules/.bin/jest --watch",
        "debug": "LANG=en_US.UTF8 node --experimental-vm-modules --inspect-brk node_modules/.bin/jest -i",
        "clean": "git clean -f -d src test",
        "doc": "mkdir -p docs ; jsdoc2md -c jsdoc.json --separators --source src/* -m table > docs/ilibToolsCommon.md ; npm run doc:html",
        "doc:html": "jsdoc -c jsdoc.json"
    },
    "devDependencies": {
        "docdash": "^2.0.2",
        "jest": "^29.7.0",
        "jsdoc": "^4.0.2",
        "jsdoc-to-markdown": "^8.0.0",
        "npm-run-all": "^4.1.5",
        "semver": "^7.5.4"
    },
    "dependencies": {
        "@log4js-node/log4js-api": "^1.0.2",
        "ilib-ctype": "^1.2.0",
        "ilib-locale": "^1.2.2",
        "ilib-xliff": "^1.1.0"
    }
}
